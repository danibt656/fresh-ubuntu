// VSCode Config File
{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.activityBar.visible": true,
    "C_Cpp.updateChannel": "Insiders",
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "terminal.integrated.cursorStyle": "block",
    "java.configuration.checkProjectSettingsExclusions": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.home": "C:\\Program Files\\Java\\jdk-15.0.2",
    "java.help.firstView": "gettingStarted",
    "editor.fontFamily": "'Consolas','Hack Nerd Font','Cascadia Code','mononoki Nerd Font',monospace",
    "files.autoSave": "afterDelay",
    "python.languageServer": "Default",
    "glassit.alpha": 255,
    "glassit.step": 20,
    "liveshare.authenticationProvider": "GitHub",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "liveServer.settings.donotShowInfoMsg": true,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "editor.fontLigatures": null,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "terminal.integrated.defaultLocation": "view",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'Hack Nerd Font', monospace",
    // Python formatter - autopep8
    "python.formatting.autopep8Args": ["--indent-size=2", "--ignore=E121"],
    "tabnine.experimentalAutoImports": true,
    // "workbench.colorCustomizations": {
    //     "statusBar.background" : "#3f3f40",
    //     "statusBar.noFolderBackground" : "#222225",
    //     "statusBar.debuggingBackground": "#511f1f"
    // }
    "editor.tokenColorCustomizations": {
        "[One Dark Pro Darker]": {
            "variables": "#ABB2BF",
            "textMateRules": [
                {
                    "scope": [
                        "keyword.operator",
                        "keyword.operator.arithmetic",
                        "keyword.operator.assignment",
                        "keyword.operator.logical",
                        "keyword.operator.new",
                        "keyword.operator.comparison"
                    ],
                    "settings": {
                        "foreground": "#56B6C2",
                    },
                },
                {
                    "scope": [
                        "comment",
                        "keyword.control",
                        "keyword.other",
                        "storage.type.function.js",
                        "storage.modifier.async.js",
                        "storage.type.js"
                    ],
                    "settings": {
                        "fontStyle": "italic"
                    }
                }
            ]
        }
    },
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            "*.mutable": {
                "underline": false
            }
        },
        "[One Dark Pro Darker]": {
            "rules": {
                "property": "#E06C75",
                "variable": "#ABB2BF",
            }
        }
    },
    "zenMode.centerLayout": false,
    "workbench.colorCustomizations" : {
        "terminal.foreground" : "#FFFFFF",
        "editor.background": "#1a1a1a",
    },
    "editor.fontSize": 13,
    "editor.defaultFormatter": "ms-python.python"
}
